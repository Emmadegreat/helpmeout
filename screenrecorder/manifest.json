{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "description": "This extension helps you record and share videos with ease.",


  "background":{
    "service_worker":"background.js"
  },

  "action":{
    "default_popup":"popup.html",
    "default_icon":"logo.png"
  },

  "icons":{
    "16":"logo.png",
    "48":"logo.png",
    "128":"logo.png"
  },

  "host_permissions":[
    "http://*/",
    "https://*/*"
  ],

  "permissions":[
    "scripting",
    "tabs",
    "activeTab"
  ],

  "version":"1.0.0"
}
